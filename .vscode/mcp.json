{
  "inputs": [],
  "servers": {
    "mdpaper": {
      "type": "stdio",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "med_paper_assistant.interfaces.mcp"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "platforms": {
        "win32": {
          "command": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        "linux": {
          "command": "${workspaceFolder}/.venv/bin/python"
        },
        "darwin": {
          "command": "${workspaceFolder}/.venv/bin/python"
        }
      }
    },
    "pubmed": {
      "type": "stdio",
      "command": "${workspaceFolder}/integrations/pubmed-search-mcp/.venv/Scripts/python.exe",
      "args": ["-m", "pubmed_search.mcp"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/integrations/pubmed-search-mcp/src",
        "ENTREZ_EMAIL": "medpaper@example.com"
      },
      "platforms": {
        "win32": {
          "command": "${workspaceFolder}/integrations/pubmed-search-mcp/.venv/Scripts/python.exe"
        },
        "linux": {
          "command": "${workspaceFolder}/integrations/pubmed-search-mcp/.venv/bin/python"
        },
        "darwin": {
          "command": "${workspaceFolder}/integrations/pubmed-search-mcp/.venv/bin/python"
        }
      }
    },
    "drawio": {
      "type": "stdio",
      "command": "${workspaceFolder}/integrations/next-ai-draw-io/mcp-server/.venv/Scripts/python.exe",
      "args": ["-m", "drawio_mcp_server"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/integrations/next-ai-draw-io/mcp-server/src",
        "DRAWIO_NEXTJS_URL": "http://localhost:6002",
        "DRAWIO_AUTO_START_WEB": "true",
        "DRAWIO_AUTO_OPEN_BROWSER": "true"
      },
      "platforms": {
        "win32": {
          "command": "${workspaceFolder}/integrations/next-ai-draw-io/mcp-server/.venv/Scripts/python.exe"
        },
        "linux": {
          "command": "${workspaceFolder}/integrations/next-ai-draw-io/mcp-server/.venv/bin/python"
        },
        "darwin": {
          "command": "${workspaceFolder}/integrations/next-ai-draw-io/mcp-server/.venv/bin/python"
        }
      }
    }
  }
}
